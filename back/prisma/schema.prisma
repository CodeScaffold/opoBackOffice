generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Reasons {
  OpenPriceSlippage
  SlippageOnSL
  HighSpread
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Result {
  id          Int       @id @default(autoincrement())
  ticket      String?
  pair        String?
  lot         Float?
  tp          Float?
  sl          Float?
  closePrice  Float?
  reason      Reasons?
  difference  Float?
  compensate  Float?
  firstCheck  Boolean   @default(false)
  secondCheck Boolean   @default(false)
  archivedAt  DateTime?

  @@unique([ticket])
}
